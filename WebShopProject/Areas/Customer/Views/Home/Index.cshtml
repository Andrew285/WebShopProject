@model IEnumerable<Product>

<div class="row pb-3">
    @foreach(var product in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="border: 1px solid #9025b5; border-radius: 5px">
                    <div class="card">
                        <img src="@product.ImageUrl" alt="book_image" class="card-img-top rounded" />
                        <div class="card-body">
                            <div class="card-title h5 text-primary">@product.Title</div>
                            <div class="pl-1">
                                <p>List Price <strike><b>$@product.ListPrice.ToString("0.00")</b></strike></p>
                            </div>
                            <div class="pl-1">
                                <p>As low as <b>$@product.SpecialPrice10.ToString("0.00")</b></p>
                            </div>
                        </div>
                        <div>
                            <a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@product.Id">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
